<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-10">
      <%= form_with(model: article, class: "shadow p-3 mb-4 bg-info bg-body-tertiary rounded", local: true) do |form| %>
        <% if article.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

            <ul>
              <% article.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row mb-3">
          <%= form.label :title, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
          <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="row mb-3">
          <%= form.label :description, class: "col-sm-2 col-form-label text-light" %>
          <div class="col-sm-10">
          <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="row justify-content-md-center mt-4">
        <div class="col-sm-1">
          <%= form.submit  class: "btn btn-outline-light btn-lg mb-3"%>
        </div>
        </div>
      </div>
      <% end %>
      <div class="mb-3 text-center">
      <% if article.title? %>
        <%= link_to "[ Show this article ]", @article, class: "text-info" %> |
      <% end %>
      <%= link_to "[ Back to articles ]", articles_path, class: "text-info" %>
      </div>
  </div>
</div>
